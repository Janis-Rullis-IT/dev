{
    "workbench.sideBar.location": "right",
    "editor.minimap.enabled": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "explorer.confirmDragAndDrop": false,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "explorer.confirmDelete": false,    
    "redhat.telemetry.enabled": false,
    "workbench.colorTheme": "Signed Dark Pro",
    "editor.fontSize": 22,
    //"editor.fontFamily": "'Ubuntu Mono',monospace",
    //"editor.fontFamily": "'Inconsolata', monospace",    
    "editor.fontFamily": "'Fira code'",    
    "editor.fontLigatures": true,
    "editor.fontWeight": 400,
    "checkpoints.addCheckpointOnSave":true,
    "checkpoints.askForCheckpointName":false,
    "bracket-pair-colorizer-2.colors": [
        "Orchid",
        "Orchid",
        "Blue",
        "Yellow",
        "Red",
        "White",
        "Grey",
        "Green"
    ],
    "workbench.iconTheme": "material-icon-theme",
    "window.menuBarVisibility": "toggle",
    "editor.formatOnType": true,
    "diffEditor.codeLens": true,
    "gitlens.advanced.fileHistoryShowAllBranches": true,
    "gitlens.views.fileHistory.files.layout": "tree",
    "gitlens.views.fileHistory.files.compact": false,
    "window.zoomLevel": -1,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.enabled": false,
    "workbench.editorAssociations": {
        "git-rebase-todo": "default"
    }
}
